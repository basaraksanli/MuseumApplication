<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewmodel"
            type="com.example.museumapplication.ui.auth.SharedAuthViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.auth.LoginFragment">


        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:clickable="@{viewmodel.itemClickableOrEnabled}"
            android:contentDescription="@string/museum_login"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="@{viewmodel.museumPanelClick}"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/adminlogin"
            android:translationZ="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.98"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.00999999" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:tag="progressBar"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/scrollView2"
            app:layout_constraintEnd_toEndOf="@+id/scrollView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.53" />

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginEnd="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewEmail"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="@string/email" />

                    <View style="@style/Divider.Vertical" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textEmailAddress"
                        android:text="@={viewmodel.emailText}"
                        android:autofillHints="@string/email"
                        tools:ignore="LabelFor"
                        android:enabled="@{viewmodel.itemClickableOrEnabled}"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewPassword"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="@string/password" />

                    <View style="@style/Divider.Vertical" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPassword"
                        android:text="@={viewmodel.passwordText}"
                        android:autofillHints="Password"
                        tools:ignore="LabelFor"
                        android:enabled="@{viewmodel.itemClickableOrEnabled}"/>
                </LinearLayout>


                <Button
                    android:layout_width="256dp"
                    android:layout_height="46dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:background="@color/colorPrimary"
                    android:clickable="@{viewmodel.itemClickableOrEnabled}"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:onClick="@{viewmodel.signInButtonClicked}"
                    android:text="@string/sign_in_with_email"
                    android:textColor="#ffffff" />

                <Button
                    android:layout_width="256dp"
                    android:layout_height="46dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorPrimary"
                    android:clickable="@{viewmodel.itemClickableOrEnabled}"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:onClick="@{viewmodel.registerButtonClicked}"
                    android:text="@string/register_with_email"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/or_login_with"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="75dp"
                        android:layout_marginEnd="3dp"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:clickable="@{viewmodel.itemClickableOrEnabled}"
                        android:contentDescription="@string/huaweiid_login_Description"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:onClick="@{viewmodel.huaweiButtonClicked}"
                        android:padding="5dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/huaweilogo" />

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="3dp"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:clickable="@{viewmodel.itemClickableOrEnabled}"
                        android:contentDescription="@string/gmail_login_Description"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:onClick="@{viewmodel.googleButtonClicked}"
                        android:padding="5dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/googlelogo"
                        app:mContext="@{viewmodel.mContext}"/>

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="75dp"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:clickable="@{viewmodel.itemClickableOrEnabled}"
                        android:contentDescription="@string/facebook_login_Description"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:onClick="@{viewmodel.facebookButtonClicked}"
                        android:padding="5dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/facebooklogo" />

                    <com.facebook.login.widget.LoginButton
                        android:id="@+id/facebookButton"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="invisible"
                        app:facebookButtonPermissions = "@{null}"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp" />
            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>